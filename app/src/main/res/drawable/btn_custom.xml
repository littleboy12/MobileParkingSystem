<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:top="200dp" android:left="200dp" android:right="200dp" android:bottom="200dp"> <!-- Offset shadow -->
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="#FF0000" /> <!-- Warna bayangan -->
        </shape>
    </item>

    <!-- Button Background -->
    <item>
        <shape>
            <corners android:radius="12dp" />
            <solid android:color="@color/white" /> <!-- Warna tombol -->
        </shape>
    </item>
</layer-list>